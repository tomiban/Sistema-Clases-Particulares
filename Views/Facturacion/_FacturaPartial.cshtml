@model TeddyMVC.Models.FacturaViewModel
@{
    Layout = "_PdfLayout"; // Usar el layout específico para el PDF
}

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #ffffff;
            color: #333333;
        }
        .invoice-container {
            width: 80%;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            border: 1px solid #ddd;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .invoice-header {
            text-align: center;
            margin-bottom: 20px;
        }
        .invoice-header img {
            width: 80px;
            margin-bottom: 10px;
        }
        .invoice-header h2 {
            color: #dc3545;
            margin: 0;
        }
        .invoice-header h4 {
            color: #6c757d;
            margin: 5px 0;
        }
        .flex-container {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .card {
            border: 1px solid #ddd;
            padding: 10px;
            flex: 1;
            margin: 0 10px;
        }
        .card-header {
            background-color: #f8f9fa;
            padding: 10px;
            border-bottom: 1px solid #ddd;
            font-weight: bold;
        }
        .card-body {
            padding: 10px;
        }
        .card-body p {
            margin: 5px 0;
        }
        .table {
            width: 100%;
            margin-bottom: 20px;
            border-collapse: collapse;
        }
        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        .table th {
            background-color: #f1f1f1;
        }
        .total-amount {
            font-weight: bold;
            font-size: 1.25rem;
        }
        .text-right {
            text-align: right;
        }
        .footer {
            text-align: center;
            font-size: 0.9rem;
            margin-top: 20px;
            padding-top: 10px;
            border-top: 1px solid #ddd;
        }
        .footer p {
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <div class="invoice-container">
        <div class="invoice-header">
            <img src="~/img/logo-transparent.png" alt="Logo" />
            <h2>Lic. Fabiana Seggiaro</h2>
            <h4>CLASES PARTICULARES</h4>
        </div>

        <div class="flex-container">
            <div class="card">
                <div class="card-header">
                    Datos del Profesor
                </div>
                <div class="card-body">
                    <p><strong>Nombre:</strong> Fabiana Seggiaro</p>
                    <p><strong>DNI:</strong> 17590935</p>
                    <p><strong>Dirección:</strong> Gabaret 1824</p>
                    <p><strong>Email:</strong> fseggiaro16@gmail.com</p>
                    <p><strong>Banco:</strong> Santander Río</p>
                    <p><strong>Alias:</strong> ITALIA.RAMA.CAMBIO</p>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    Datos del Alumno
                </div>
                <div class="card-body">
                    <p><strong>Nombre:</strong> @Model.Alumno.Nombre @Model.Alumno.Apellido</p>
                    <p><strong>DNI:</strong> @Model.Alumno.DNI</p>
                    <p><strong>Dirección:</strong> @Model.Alumno.Domicilio</p>
                </div>
            </div>
        </div>

        <div class="section-divider"></div>

        <div class="mb-4">
            <h3 class="pb-2">Registro de Clases</h3>
            <p><strong>Fecha:</strong> @DateTime.Now.ToShortDateString()</p>
        </div>

        <div class="mb-4">
            <h3>Clases</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Horas</th>
                        <th>Precio por Hora</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var turno in Model.Turnos)
                    {
                        <tr>
                            <td>@turno.Fecha.ToShortDateString()</td>
                            <td>@turno.Horas</td>
                            <td>@turno.PrecioHora.ToString("C")</td>
                            <td>@((turno.Horas * turno.PrecioHora).ToString("C"))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-right mb-3 pt-2">
            <p class="lead fs-4">TOTAL A PAGAR: <span class="total-amount">@Model.Total.ToString("C")</span></p>
        </div>

        <div class="footer">
            <p>Fabiana Seggiaro - Lic. en Cs Sociales y Humanidades</p>
            <p>Tel: 3496652675 | Banco: Santander Rio | Alias: ITALIA.RAMA.CAMBIO | Mail: fseggiaro16@gmail.com</p>
        </div>
    </div>