@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Alumnos";
}

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (TempData["AlertMessage"] != null)
{
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        Swal.fire({
            title: '¡Éxito!',
            text: '@TempData["AlertMessage"]',
            icon: 'success',
            confirmButtonText: 'Aceptar'
        });
    });
    </script>
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="my-4">Alumnos Registrados</h2>
            <p>
                <a onclick="showInPopup('@Url.Action("Create", "Alumnos", new { id = 0 }, Context.Request.Scheme)' , 'ALUMNOS')"
                    class="btn btn-sm btn-primary text-white"><i class="oi oi-plus"></i> Registrar Alumno</a>
            </p>
            <div class="card">
                <div class="card-header text-center">
                    <h5>Lista de Alumnos</h5>
                </div>
                <div class="card-body">
                    <table id="alumnosTable" class="table table-hover table-responsive table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>DNI</th>
                                <th>Domicilio</th>
                                <th>Estado de Deuda</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Alumno.Id</td>
                                    <td>@item.Alumno.Nombre</td>
                                    <td>@item.Alumno.Apellido</td>
                                    <td>@item.Alumno.DNI</td>
                                    <td>@item.Alumno.Domicilio</td>
                                    <td>
                                        @if (item.TieneDeuda)
                                        {
                                            <span class="badge bg-danger">Debe</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Al día</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Facturacion", "Alumnos", new { id = item.Alumno.Id })"
                                            class="btn btn-primary btn-sm"><i class="oi oi-document"></i> Facturar</a>
                                        <a onclick="showInPopup('@Url.Action("Edit", "Alumnos", new { id = item.Alumno.Id }, Context.Request.Scheme)' , '')"
                                            class="btn btn-outline-warning btn-sm"><i class="oi oi-pencil"></i> Editar</a>
                                        <button data-id="@item.Alumno.Id" class="btn btn-outline-danger btn-sm deleteItem"
                                            data-bs-toggle="modal" data-bs-target="#deleteDialog">
                                            <i class="oi oi-trash"></i>Eliminar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_MostrarModal" />
<partial name="_ModalEliminar" />

@section Scripts {

    <script src="~/js/showmodal.js"></script>

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#alumnosTable').DataTable({
                "language": {
                    url: "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                },
            });
        });
    </script>

    <script>
        sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Alumnos/Delete/', false);
    </script>
}
